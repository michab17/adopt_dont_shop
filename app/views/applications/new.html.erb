<h2>New Application</h2>

<%= form_with url: "/applications/new", method: :post, local: true do |form| %>
  <%= form.label 'Name:' %>
  <%= form.text_field :name %><br>
  <%= form.label 'Street Address:' %>
  <%= form.text_field :street_address%><br>
  <%= form.label 'City:' %>
  <%= form.text_field :city%><br>
  <%= form.label 'State:' %>
  <%= form.text_field :state%><br>
  <%= form.label 'Zip code:' %>
  <%= form.text_field :zip_code%><br>
  <%= form.hidden_field :description, value: "They love dogs and cats" %>
  <%= form.hidden_field :status, value: "In Progress" %>
  <%= form.submit value: "submit" %>
<% end %>